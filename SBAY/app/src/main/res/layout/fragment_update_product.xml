<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".updateProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/updateyourproduct"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_productName"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="text"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10sp">

                <EditText
                    android:id="@+id/et_productDesc"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="none"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_productCost"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="number"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pcat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"/>

                <Spinner
                    android:id="@+id/sp_productCat"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/product_categories"
                    android:prompt="@string/promptcat"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/imgbtn_pCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_productExeurl"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="textUri"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pExeUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_productDemoUrl"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="textUri"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pDemoUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_productHostUrl"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:inputType="textUri"
                    android:padding="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>

                <ImageButton
                    android:id="@+id/imgbtn_pHostUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:padding="4dp"
                    android:src="@drawable/edit_button" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_screenshot"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:visibility="visible" />


            <!--<TextView-->
            <!--android:id="@+id/tvUrl"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/btn_uploadimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_blue"
                android:text="@string/uploadimage"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_updateProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_blue"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>